<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="isAnimateOn" format="boolean" />
    <attr name="loveColor" format="color" />

    <declare-styleable name="LoveView">
        <attr name="isAnimateOn" />
        <attr name="loveColor" />
    </declare-styleable>

    <declare-styleable name="LoadingView">
        <attr name="loading_renderer">
            <enum name="ElectricFanLoadingRenderer" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="HTextView">
        <attr name="isAnimate" format="boolean"/>
        <attr name="animateType" format="enum">
            <enum name="scale" value="0"/>
            <enum name="evaporate" value="1"/>
            <enum name="fall" value="2"/>
            <enum name="sparkle" value="3"/>
            <enum name="anvil" value="4"/>
            <enum name="line" value="5"/>
            <enum name="pixelate" value="6"/>
            <enum name="typer" value="7"/>
            <enum name="rainbow" value="8"/>
        </attr>
        <attr name="fontAsset" format="string"/>
    </declare-styleable>
</resources>